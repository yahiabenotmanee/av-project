<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    tools:context=".Fingerprint_Activity"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_width="153dp"
        android:layout_height="109dp"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_baseline_fingerprint_96"/>

    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/tx_info"
        android:text=""/>

    <Button
        android:id="@+id/buttonLF"
        android:layout_width="180dp"
        android:layout_height="48dp"
        android:layout_centerInParent="true"
        android:backgroundTint="@color/theme_color"
        android:gravity="center"
        android:text="Login Fingerprint"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/buttonFP"
        android:layout_width="180dp"
        android:layout_height="48dp"
        android:layout_centerInParent="true"
        android:backgroundTint="@color/G_purple"
        android:gravity="center"
        android:text="Fingerprint + PIN"
        android:textColor="@color/white" />

</LinearLayout>